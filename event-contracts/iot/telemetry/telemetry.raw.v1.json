{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Telemetry Raw Event", 
  "description": "Event published when IoT devices send raw telemetry data",
  "type": "object",
  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this event instance"
    },
    "eventType": {
      "type": "string",
      "const": "iot.telemetry.telemetry.raw.v1",
      "description": "Event type identifier"
    },
    "occurredAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the event occurred"
    },
    "producer": {
      "type": "string",
      "description": "Service that produced this event"
    },
    "traceId": {
      "type": "string",
      "description": "Distributed tracing correlation ID"
    },
    "correlationId": {
      "type": "string",
      "description": "Business transaction correlation ID"
    },
    "partitionKey": {
      "type": "string",
      "description": "Key used for message partitioning (typically device_id)"
    },
    "schemaVersion": {
      "type": "string",
      "const": "1.0",
      "description": "Version of the event envelope schema"
    },
    "tenantId": {
      "type": "string",
      "description": "Multi-tenant identifier (optional)"
    },
    "payload": {
      "type": "object",
      "properties": {
        "device_id": {
          "type": "string",
          "description": "Unique identifier for the IoT device"
        },
        "device_type": {
          "type": "string",
          "enum": ["sensor", "actuator", "gateway", "camera", "tracker"],
          "description": "Type of IoT device"
        },
        "readings": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "sensor_type": {
                "type": "string",
                "enum": ["temperature", "humidity", "pressure", "motion", "light", "sound", "gps"],
                "description": "Type of sensor measurement"
              },
              "value": {
                "type": "number",
                "description": "Sensor reading value"
              },
              "unit": {
                "type": "string",
                "description": "Unit of measurement (celsius, percent, pascals, etc.)"
              },
              "timestamp": {
                "type": "string",
                "format": "date-time",
                "description": "When this reading was taken"
              }
            },
            "required": ["sensor_type", "value", "unit", "timestamp"]
          },
          "minItems": 1,
          "description": "Array of sensor readings"
        },
        "location": {
          "type": "object",
          "properties": {
            "latitude": {
              "type": "number",
              "minimum": -90,
              "maximum": 90
            },
            "longitude": {
              "type": "number", 
              "minimum": -180,
              "maximum": 180
            },
            "altitude": {
              "type": "number",
              "description": "Altitude in meters"
            }
          },
          "description": "Geographic location of the device (optional)"
        },
        "battery_level": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Device battery level percentage"
        },
        "signal_strength": {
          "type": "number",
          "description": "Network signal strength in dBm"
        }
      },
      "required": [
        "device_id",
        "device_type",
        "readings"
      ],
      "description": "Business data for the telemetry event"
    }
  },
  "required": [
    "eventId",
    "eventType",
    "occurredAt",
    "producer",
    "traceId", 
    "correlationId",
    "partitionKey",
    "schemaVersion",
    "payload"
  ]
}